<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:scale_base_height="2220"
        app:scale_base_width="1080">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            app:scale_height="2220"
            app:scale_width="1080">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                app:scale_height="2220"
                app:scale_width="1080">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="30dp">
                    <ImageButton android:id="@+id/playPauseButton"
                        android:layout_width="120dp"
                        android:layout_height="162dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_play"
                        android:background="@color/green"
                        android:layout_margin="10dp"
                        android:onClick="onPlayPause"/>
                    <ImageButton android:id="@+id/stopButton"
                        android:layout_width="120dp"
                        android:layout_height="162dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_stop"
                        android:background="@color/red"
                        android:layout_margin="10dp"
                        android:onClick="onStop"/>
                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="-10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp">
                    <TextView
                        android:id="@+id/totalDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="95dp"
                        android:textStyle="bold"
                        android:text="0.00" />

                    <TextView
                        android:id="@+id/currentDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="95dp"
                        android:textStyle="bold"
                        android:text="0.00" />

                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="40dp">
                    <ImageButton android:id="@+id/clearButton"
                        android:layout_width="95dp"
                        android:layout_height="101dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_split"
                        android:background="@color/yellow"
                        android:layout_margin="10dp"
                        android:onClick="onClear"/>
                    <ImageButton android:id="@+id/editButton"
                        android:layout_width="95dp"
                        android:layout_height="101dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_edit"
                        android:background="@color/green"
                        android:layout_margin="10dp"
                        android:onClick="onEdit"/>
                    <ImageButton android:id="@+id/settingsButton"
                        android:layout_width="95dp"
                        android:layout_height="101dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_settings"
                        android:background="@color/blue"
                        android:layout_margin="10dp"
                        android:onClick="onSettings"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/displayUnits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="40dp"
                android:layout_marginBottom="9dp"
                android:textStyle="bold"
                android:text="@string/default_unit" />
        </FrameLayout>
    </com.ssomai.android.scalablelayout.ScalableLayout>
</FrameLayout>